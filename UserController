import {getAllUsers, getUserById, addUser, updateUser, deleteUser} from "./user.module"

const UserController = {

  getList: (req, res) => {
    getAllUsers();
  },
  getById: (req, res) => {
    getUserById(req.params.id);
  },
  add: (req, res) => {
    const { user } = req.body;
    addUser(user.name, user.email, user.phone);
  },
  update: (req, res) => {
    const { user } = req.body;
    updateUser(req.params.id, user.name, user.email, user.phone)
  },
  delete: (req, res) => {
    deleteUser(req.params.id);
  }

};

export default UserController;


